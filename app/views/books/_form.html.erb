<div class="form">
<h2><%= title %></h2>
<% if book.errors.any? %>
  <%= render partial: "error.html.erb" %>
<% end %>

<%= form_with model: book, local: true do |f| %>
  <h3>Title</h3>
  <div class="text-field"><%= f.text_field :title %></div>
  <h3>Body</h3>
  <div class="text-area"><%= f.text_area :body %></div>
  <%= f.submit action %>
<% end %>
</div>